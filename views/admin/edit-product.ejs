<%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
 <%-include('../includes/navigation.ejs')%>

    <main>
      <form onsubmit="return validate();"    class="product-form" 
            method="POST" 
            action="/admin/<%if(editing)
            {%>edit-product<%}
          else
            {%>add-product<%}%>" 
            >

        
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" autocomplete="off" id="title"
           value="<%if(editing){%><%=product.title%><%}%>"/>
        </div>


        <div class="form-control">
          <label for="price">Price</label>
          <input type="<%if(editing)
                        {%>text<%}
                        else
                        {%>number<%}
                        %>" name="price" 
          value="<%if(editing){%> <%=product.price%><%}%>"
          autocomplete="off" id="price" step="0.01" />
        </div>


        <div class="form-control">
          <label for="imageURL">Insert Image URL</label>
          <input  type="text" name="imageURL" 
          value="<%if(editing){%> <%=product.imgURL%> <%}%>"
          autocomplete="off" id="imageURL" />
        </div>


        <div class="form-control">
          <label for="description">Product Description</label>
          <textarea name="description" id="" rows="10"
          ><%if(editing){%> <%=product.description%> <%}%></textarea>
        </div>

        <%if(editing){%>
          <input type="hidden" value="<%=product.id%>" name="productId">
          <%}%>

        <button  class="add_product_button" type="submit">
          <% if(!editing)
          {%>Add Product <%} 
          else 
          {%>Update Product <%}%>  
        </button>
      </form>
   
    </main>
 <%-include('../includes/end.ejs')%>