<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/main.css" />
<link rel="stylesheet" href="/css/product.css" />
<body>
  <%-include('../includes/navigation.ejs')%>
  <main class="animated zoomIn">
    <h1>My Products</h1>
    <p>List of the all Products</p>
    <% if(prods.length>0) {%> <% for(let product of prods) {%>
    <div class="card">
      <header class="card__header">
        <h1 class="product_title"><%=product.title%></h1>
      </header>
      <img src=<%=product.imgURL%> style="width:100%; height:280px;" alt="Book Image">
      <div class="container">
        <h3 class="product_price"><%=product.price%></h3>
        <a class="add_to_cart_button">Edit</a>
        <form action="/admin/delete-product" method="POST">
          <button class="add_to_cart_button" type="submit">Delete</button>
        </form>
      </div>
    </div>
    <%} %> <%} else {%>
    <h1>No Products Found!</h1>
    <% }%>
  </main>
  <%-include('../includes/end.ejs')%>
</body>
